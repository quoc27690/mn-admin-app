{
	"presets": ["module:metro-react-native-babel-preset"],
	"plugins": [
		[
			"module-resolver",
			{
				"root": ["./src"],
				"extensions": [
					".ios.ts",
					".android.ts",
					".ts",
					".ios.tsx",
					".android.tsx",
					".jsx",
					".js",
					".json",
					".png"
				],
				"alias": {
					"@app": "./src/app",
					"@api": "./src/api",
					"@screens": "./src/screens",
					"@stack": "./src/stack",
					"@redux": "./src/redux",
					"@common": "./src/common",
					"@components": "./src/components",
					"@images": "./assets/images",
					"@fonts": "./assets/fonts"
				}
			}
		]
	]
}
